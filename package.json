{
  "name": "@zeytech/adonis-auth0",
  "version": "1.0.21",
  "description": "Zeytech AdonisJS plugin to help integrate Auth0 for authentication",
  "main": "build/providers/Auth0Provider.js",
  "types": "build/adonis-typings/index.d.ts",
  "typings": "build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && npm run copyfiles",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json zeytechinc/zeytech-adonis-auth0",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "co:login": "aws codeartifact login --tool npm --repository zeytech-internal --domain zeytech --domain-owner 353361721131 --profile zeytech-dev --region us-east-1",
    "prepare": "npm run co:login"
  },
  "author": "Zeytech Inc.",
  "license": "Unlicense",
  "devDependencies": {
    "@adonisjs/core": "^5.1.11",
    "@adonisjs/http-server": "^5.5.5",
    "@adonisjs/mrm-preset": "^4.1.2",
    "@adonisjs/require-ts": "^2.0.7",
    "@types/auth0": "^2.33.4",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.6.2",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "doctoc": "^2.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^1.3.3",
    "eslint-plugin-prettier": "^3.4.0",
    "github-label-sync": "^2.0.2",
    "husky": "^7.0.1",
    "japa": "^3.1.1",
    "mrm": "^3.0.8",
    "np": "^7.5.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js",
    "build/adonis-typings",
    "build/templates",
    "build/instructions.md",
    "build/templates"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "auth0": "^2.36.1",
    "jsonwebtoken": "^8.5.1"
  },
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "types": "zeytech-adonis-auth0",
    "providers": [
      "zeytech-adonis-auth0"
    ],
    "templates": {
      "basePath": "./build/templates",
      "config": [
        {
          "src": "config.txt",
          "dest": "zeytech-auth0"
        }
      ]
    }
  }
}
